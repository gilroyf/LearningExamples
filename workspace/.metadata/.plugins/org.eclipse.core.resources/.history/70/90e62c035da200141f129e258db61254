<script src="https://maps.googleapis.com/maps/api/js"></script>
<script>
  var position;
  function initialize() {
	    var mapCanvas = document.getElementById('map-canvas');
		var geo = window.navigator.geolocation;
		
		var geoSuccess = function(a) {
			position.longitude = a.coords.longitude; 
			position.latitude = a.coords.latitude;
		};
		geo.getCurrentPosition(geoSuccess);
	    var mapOptions = {
	            center: new google.maps.LatLng(position.longitude, position.latitude), //44.5403, -78.5463),
	            zoom: 8,
	            mapTypeId: google.maps.MapTypeId.ROADMAP
	          };

	    var map = new google.maps.Map(mapCanvas,mapOptions);
  }
  
  google.maps.event.addDomListener(window, 'load', initialize);
</script>
